// Tatoosh - Startup Script
// This runs when the mod loads

// Load default bindings and settings from base game
exec default.cfg

// Load saved settings
exec config.cfg

// Load user customizations
exec autoexec.cfg

// Sprint
alias +sprint "impulse 20"
alias -sprint "impulse 21"

// Process command-line arguments
stuffcmds

// Print welcome message
echo "======================================"
echo "  PROJECT TATOOSH"
echo "  Version 0.1.0-dev"
echo "======================================"
echo ""

// Enable RmlUI for menus and HUD
ui_use_rmlui_menus 1
ui_use_rmlui_hud 1

// Play background demos (provides world backdrop for main menu)
startdemos demo1 demo2 demo3

// Show the RmlUI main menu on top of the demo
ui_show
